<% include header %>

<div class="form-v9">
  <div class="page-content">

    <div class="form-v9-content" style="background-image: url('images/form_2.jpg')">

     <form class="form-detail" action="#" method="post">
        <h2 color="black">Contact Form</h2>
        <div class="row mb-5">
          <font color="orange"><%= output %></font>

          <div class="col-12 text-center">
            <h3 class="section-sub-title">Contact Form</h3>
            <h2 class="section-title mb-3">Get In Touch</h2>
          </div>
        </div>
        <div class="form-row-total">
          <div class="form-row">
            <input type="text" name="name" id="full-name" cols="30" rows="7" class="input-text" style="color: black" placeholder="Your Name"
              required>
          </div>
          <div class="form-row">
            <input type="text" name="email" id="your-email" class="input-text" style="color: black" placeholder="Your Email" required
              pattern="[^@]+@[^@]+.[a-zA-Z]{2,6}">
          </div>
        </div>
        <div class="form-row-total">
          <div class="form-row">
            <input type="text" name="subject" id="" class="input-text" style="color: black" placeholder="Subject"
              required>
          </div>
          <div class="form-row">
            <input type="text" name="mobile" id="mobile-number" class="input-text" style="color: black" placeholder="mobile-number" required>
          </div>

        </div>
        <div class="form-row-total">
          <div class="form-row">
            <textarea name="message" id="" cols="30" rows="10" class="input-text" style="color: rgb(0, 0, 0)" placeholder="type your message"
            required></textarea>
          </div>
          <div class="form-row-last">
            <input type="submit" name="contact" class="contact" value="Send">
          </div>
      </form>
    </div>
  </div>
</div>
<% include footer %>