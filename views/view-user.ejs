<% include admin-nav  %>

<div class="form-v9">
    <div class="page-content">

            <center>
                <h2 color="block">View And Manage Users</h2>
                <font color="yellowblue"><b><%= sunm  %></b></font><br>
                <table cellspacing="10" border="1" ">
                    <tr>
                        <th style="color: black" >RegID</th> 
                        <th style="color: black">Name</th>
                        <th style="color: black">Email</th>
                        <th style="color: black">Mobile</th>
                        <th style="color: black">Status</th>
                        <th style="color: black">Delete</th>
                    </tr>
                    <tr>
                        <td colspan="8" style="color: black">
                            <hr>
                        </td>
                    </tr>
                    <% for(let i in result) { %>
                    <tr>
                        <td style="color: black" "><%= result[i].regid %></td>
                        <td style="color: black"><%= result[i].name %></td>
                        <td style="color: black"><%= result[i].email %></td>
                        <td style="color: black"><%= result[i].mobile %></td>
                        <td>
                            <% if(result[i].status) { %>
                            <a href="/admin/manage-user-status?regid=<%= result[i].regid %>&s=block" title="Block User">
                                <img src="../images/block.png" height="20" width="30" />
                            </a>
                            <% } else { %>
                            <a href="/admin/manage-user-status?regid=<%= result[i].regid %>&s=unblock"
                                title="Un-Block User">
                                <img src="../images/unblock.png" height="20" width="30" />
                            </a>
                            <% } %>
                        </td>
                        <td>
                            <a href="/admin/manage-user-status?regid=<%= result[i].regid %>&s=delete" title="Delete User">
                                <img src="../images/delete.png" height="20" width="30" />
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="8">
                        </td>
                    </tr>
                    <% } %>


                </table>

            </center>
           
        </div>
    </div>



    <% include admin-footer %>